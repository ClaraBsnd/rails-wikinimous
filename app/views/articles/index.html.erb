<div class="navbar-wiki">
  <h1>Articles List</h1>
  <%= link_to new_article_path do %>
    <i class="fas fa-pen"></i> Create a new article
  <% end %>
</div>


<div class="container" id="content">
  <ul class="list-unstyled">
    <% @articles.each do |article| %>
    <li>
      <h2><%= link_to article.title[0, 100], article_path(article.id) %></h2>
      <p><%= article.content[0, 150] %>...</p>
    </li>
    <% end %>
  </ul>

</div>
